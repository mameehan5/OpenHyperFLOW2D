####################################################
#
# Choose using C++ compiler
#
# COMPILER=GNU   - GNU C++ compiler
# COMPILER=Intel - Intel C++ compile
####################################################
COMPILER=GNU
# Debug level
DEBUGLEVEL = 0

ifeq ("$(COMPILER)","Intel")

IS_OPENMP=0

else

IS_OPENMP=`gcc -fopenmp -S -I . -I  utl utl/utl.cpp 2>/dev/null; echo $?`

endif

# Top SIMD features
SIMD=AVX

# Use 32 or 64 bit float point variables
FP_OPTS  = -DFP=float
